<main class="contenedor">
    {{!--Editar VID 128 a 133--}}
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Información General</h3>
        
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required> {{!--required validacion de html5. name titulo para leerlo despues--}}
        </div>

        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ubicación" value="{{vacante.ubicacion}}" required>
        </div>

        <div class="campo">
            <label>Salario</label>
            <input type="text" name="salario" placeholder="Importe en USD" value="{{vacante.salario}}" required>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}} {{!--tipoContrato es un HELPER VID 132--}}
                    <option value="" disabled selected>--Selecciona--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}"> {{!--Para el trix editor los datos los ponemos aca--}}
            <trix-editor input="x"></trix-editor>{{!--Editor de TRIX--}}
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}} {{!--Lista de skills. Le paso el parametro vacante.skills a seleccionarSkills de /helpers/handlebars--}}
            {{/seleccionarSkills}} {{!--Cierre--}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills"> {{!--Parte de la interaccion de la seleccion de skills VID 124--}}
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">{{!----}}
        </div>
    </form>
</main>