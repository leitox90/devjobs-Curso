<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data"> {{!!--El metodo POST se ejecuta cuando le doy al boton guardar cambios}}
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre" value="{{usuario.nombre}}">
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input type="email" name="email" value="{{usuario.email}}" placeholder="E-mail">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios"> {{!!--Este submit ejecuta el POST--}}
        </div>
    </form>
</main>