<main class="lista-vacantes">
    {{!--VID 112--}}
    <h2>Lista de Vacantes</h2>
    {{!--Video 112. Vacante 1--}}
    {{#if vacantes.length}} {{!--Si hay vacantes. la variable vacantes viene del homeController.mostrarTrabajos, entonces la variabla para leerla debe de llamarse igual.--}}
        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{empresa}}</h3>
                    <p class="puesto">{{titulo}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Ubicacion</p>
                    <p class="nombre">{{ubicacion}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Contrato</p>
                    <p class="nombre contrato">{{contrato}}</p>
                </div>
                <div class="caja centrar-vertical">
                    <a href="/vacantes/{{url}}" class="btn btn-verde">MÃ¡s Info</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay Vacantes</p>
    {{/if}}
</main>