<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información General</h3>
        
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer"> {{!--required validacion de html5. titulo para leerlo despues--}}
        </div>

        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa">
        </div>

        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ubicación">
        </div>

        <div class="campo">
            <label>Salario</label>
            <input type="text" name="salario" placeholder="Importe en USD">
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion"> {{!--En este input se guarda todo lo que escribo en el editor de TRIX. VID 121--}}
            <trix-editor input="x"></trix-editor>{{!--Editor de TRIX. VID 121--}}
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}} {{!--Cierre--}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills"> {{!--Parte de la interaccion de la seleccion de skills VID 124--}}
            <input type="submit" value="Publicar" class="btn btn-azul">{{!--Bonton de Publicar--}}
        </div>
    </form>
</main>