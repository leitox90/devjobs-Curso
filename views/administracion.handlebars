<main class="lista-vacantes">
    <h2>Navegacion</h2>
    <div class="botones separador">
        <a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes/nueva" class="btn btn-verde">Nueva Vacante</a>
    </div>
    <h2>Tus Vacantes Publicadas</h2>
    <div class="panel-administracion">
        {{#if vacantes.length}}{{!--LA variable viene de authController.mostrarPanel--}}
            {{#each vacantes}}
                <div class="vacante">
                    <div class="caja">
                        <h3>{{empresa}}</h3>
                        <p class="puesto">{{titulo}}</p>
                        <p class="candidatos"> {{!!--Mostrar el numero de candidatos registrados VID 169--}}
                            {{candidatos.length}} Candidato/s
                        </p>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/candidatos/{{_id}}" class="btn btn-amarillo">Candidatos</a>{{!!--_id de la vacante--}}
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="/vacantes/editar/{{url}}" class="btn btn-verde">Editar</a>
                    </div>
                    <div class="centrar-vertical caja">
                        <a href="#" data-eliminar="{{_id}}" class="btn btn-rojo">Eliminar</a>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>Todav√≠a no has publicadao vacantes</p>
        {{/if}}
    </div>
</main>